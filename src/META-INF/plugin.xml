<idea-plugin version="2">
  <name>PairHero</name>
  <description>IntelliJ version of PairHero plugin http://www.happyprog.com/pairhero/</description>
  <version>1.0</version>
  <vendor>JetBrains</vendor>
    <!--
    <idea-version since-build="8000"/>
    -->
    <depends>JUnit</depends>
    <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
     
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->                       
     <toolWindow id="PairHero" secondary="true" icon="/pairhero/icons/icon.png" anchor="right" factoryClass="pairhero.PairHeroToolWindowFactory">

     </toolWindow>
      <testStatusListener implementation="pairhero.JUnitListener"/>
      <refactoring.helper implementation="pairhero.RefactoringHelperListener"/>
  </extensions>
</idea-plugin>